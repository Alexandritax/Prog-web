<!DOCTYPE html>
<html lang="en" lang="es">
<head>
    <meta charset="UTF-8" />
    <title>UL-CS</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ" crossorigin="anonymous"></script>
    <link href="\css\estilo.css" rel="stylesheet"/>
</head>
<body class="container">
    <%- include('menu') %>
    <div class="mb-3">
        <!--banner-->
        <button id="boton">Borrar SS</button>
        <img id="banner" class="img-fluid" src="\imagenes\csgo.jpg" alt="CSGO banner"/>
    </div>
    <div class="row">
        <!--Secciones secundarias-->
        <div class="col-3">
            <div class="card">
                <h3 class="card-header">Eventos abiertos</h3>
                <div class="card-body">
                    <% if (eventos.length>0) { %>
                    <ul class="list-group list-group-flush">
                        <%eventos.forEach((evento)=> {%>
                        <li class="list-group-item">
                            <div class="row">
                                <div class="col-8">
                                    <%=evento.nombre%>
                                </div>
                                <div class="col-4">
                                    <button type="button" class="btn btn-dark">
                                        Ver
                                    </button>
                                </div>
                            </div>
                        </li>
                        <% }) %>
                    </ul>
                    <% }else { %>
                        <p>no hay eventos abiertos</p>
                    <% } %>
                    </div>
            </div>
        </div>
        <div class="col-5">
            <div class="card">
                <h3 class="card-header">Top players</h3>
                <div class="card-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Player</th>
                                <th>Maps</th>
                                <th>Rounds</th>
                                <th>K-D Diff</th>
                                <th>K/D</th>
                                <th>Rating</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% topPlayers.forEach((player)=>{ %>
                            <tr>
                                <td><%= player.nombre%></td>
                                <td><%= player.maps%></td>
                                <td><%= player.rounds%></td>
                                <td><%= player.k_d%></td>
                                <td><%= player.k__d%></td>
                                <td><%= player.rating%></td>
                            </tr>
                        <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-4">
            <div class="card">
                <h3 class="card-header">Registra tu equipo</h3>
                <div class="card-body">
                    <form action="">
                        <div>
                            <label class="form-label">Correo</label>
                            <input class="form-control" type="text">
                        </div>
                        <div>
                            <label class=form-label>Password</label>
                            <input class=form-control type="text">
                        </div>
                        <div>
                            <label class=form-label>Nombre</label>
                            <input class=form-control type="text">
                        </div>
                        <div class="text-end">
                            <button class="btn btn-warning mt-2" type="button">Registrar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <%- include('footer') %>
    <script src="\js\index.js"></script>
</body>
</html>